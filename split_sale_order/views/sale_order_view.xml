<odoo>
    <record id="sale_order_inherited_wizard_form_view" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.view.wizard</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
                <xpath expr="/form/header" position="inside">
                    <button
                    type="object"
                    name="action_split_quotation_wiz"
                    string="Split Quotation"
                    class="btn-primary"
                    attrs="{'invisible': ['|',('state', '!=', 'draft'), ('source_sale_order_id', '!=', False), ('order_line_length', '>', '1')]}"
                />
                </xpath>
                <xpath
                expr="/form/sheet/group[@name='sale_header']/group[@name='partner_details']/field[@name='partner_id']"
                position="after"
            >
                    <field
                    name="source_sale_order_id"
                    attrs="{'invisible': [('source_sale_order_id', '=', False)]}"
                    readonly="1"
                />
                    <field name="order_line_length" invisible="1" />
                </xpath>
        </field>
    </record>
</odoo>
