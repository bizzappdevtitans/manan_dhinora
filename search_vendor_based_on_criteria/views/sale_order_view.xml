<odoo>
    <!-- inherited view of sale.order to add the supplier field to order_line -->
    <record id="sale_order_inherited_tree_view" model="ir.ui.view">
        <field name="name">sale.order.inherited.tree.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
                <xpath
                expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']"
                position="after"
            >
                    <field name="supplier" />
                </xpath>
        </field>
    </record>
</odoo>
