<odoo>
    <record id="product_supplierinfo_inherited_tree_view" model="ir.ui.view">
        <field name="name">product.supplierinfo.inherited.tree.view</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view" />
        <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='product_id']" position="after">
                    <field name="supplier_sequence" />
                </xpath>
        </field>
    </record>
    <!-- inherited view of product.supplierinfo to add the smart button of book.shelf -->
    <record id="product_supplierinfo_inherited_form_view" model="ir.ui.view">
        <field name="name">product.supplierinfo.inherited.form.view</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
        <field name="arch" type="xml">
                <xpath
                expr="//group[@name='vendor']/field[@name='product_code']"
                position="after"
            >
                    <field name="supplier_sequence" />
                </xpath>
        </field>
    </record>
</odoo>
