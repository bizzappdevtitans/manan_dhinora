<odoo>
    <!-- template for the maintenance cycle email -->
    <record id="maintenance_cycle_mail_template" model="mail.template">
        <field name="name" />
        <field name="model_id" ref="model_account_move" />
        <field name="email_from">{{object.company_id.email}}</field>
        <field name="email_to">{{object.partner_id.email}}</field>
        <field name="subject">Reminder for quaterly check</field>
        <field name="body_html" type="html">
            <p>
                <t>
                Dear <t t-out="object.partner_id.name" />,
                <br />
                It is time for your quarterly maintenance check, of invoice: <t
                        t-out="object.name"
                    />,
                <br />
                please do contact our customer care to schedule a maintenance session
                <br /><br />
                Regards,
                <t t-out="object.company_id.name" />,
                <br />
                </t>
            </p>
        </field>
    </record>
</odoo>
