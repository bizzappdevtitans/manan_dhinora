<odoo>
    <data noupdate="1">
        <record id="maintenance_cycle_mail_template" model="mail.template">
            <field name="name">Fabrication management: Maintenance reminder</field>
            <field name="model_id" ref="model_account_move" />
            <field
                name="subject"
            >{{ object.company_id.name }} Order (Ref {{ object.name or 'n/a' }})</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear <t t-out="object.partner_id.name or ''">Customer</t>
        <br /><br />
        This is a reminder for your quaterly Maintenance checkup
        from <t t-out="object.company_id.name or ''">YourCompany</t>.
        <br /><br />
        Please do contact us, So we can set an appointment.
        <br /><br />
        Best regards,
    </p>
</div></field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True" />
        </record>
   </data>
</odoo>
