<odoo>
    <!-- inherited view of sale order to add fields an smart buttons #T00469 -->
    <record id="sale_order_inherited_form_view" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
                <xpath expr="/form/sheet/div[@name='button_box']" position="inside">
                    <button
                    type="object"
                    name="action_project_view"
                    string="Project"
                    icon="fa-puzzle-piece"
                    attrs="{'invisible': [('task_length', '!=', '0')]}"
                />
                    <button
                    type="object"
                    name="action_task_view"
                    string="Tasks"
                    icon="fa-tasks"
                    class="oe_stat_button"
                    attrs="{'invisible': [('task_length', '!=', '0')]} "
                >
                        <field name="task_length" widget="statinfo" />
                    </button>
                </xpath>
                <xpath
                expr="/form/sheet/group[@name='sale_header']/group[@name='partner_details']"
                position="inside"
            >
                    <field name="task_length" invisible="1" />
                    <field name="metal_used" />
                    <field name="maintenance_cycle" />
                </xpath>
        </field>
    </record>
</odoo>
