<odoo>
    <!-- inherited view of mrp.production to add the partner_id field #T00469 -->
   <record model="ir.ui.view" id="mrp_production_view_inherit">
    <field name="name">mrp.production.view.inherit</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp.mrp_production_form_view" />
    <field name="arch" type="xml">
        <xpath
                expr="/form/sheet/group/group/field[@name='product_id']"
                position="after"
            >
            <field name="partner_id" />
        </xpath>
    </field>
</record>
</odoo>
