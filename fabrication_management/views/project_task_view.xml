<odoo>
    <record id="project_task_addon" model="ir.ui.view">
        <field name="name">project.task.addon</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath
                expr="/form/sheet/group/group/field[@name='parent_id']"
                position="after"
            >
                    <field name="sale_ref" />
            </xpath>
        </field>
    </record>
</odoo>
