<odoo>
    <!-- inherited view of purchase.order to add reference to SO and a smart buttons #T00469 -->
    <record id="purchase_order_inherited_form_view" model="ir.ui.view">
        <field name="name">purchase.order.inherited.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
                <xpath expr="/form/sheet/div[@name='button_box']" position="inside">
                    <button
                    type="object"
                    name="action_sale_mrp_reference"
                    string="Sale"
                    attrs="{'invisible': [('sale_refrence', '=', 'False')]} "
                    icon="fa-dollar"
                />
                </xpath>
                <xpath expr="//field[@name='partner_ref']" position="after">
                        <field name="description" readonly="1" />
                        <field name="sale_refrence" invisible="1" />
                </xpath>
        </field>
    </record>
</odoo>
