<odoo>
    <!-- inherited view of purchase.report with a new field seller added to it #T7003-->
    <record
        id="product_seller_purchase_report_inherited_search_view"
        model="ir.ui.view"
    >
        <field name="name">product.seller.purchase.report.inherited.search.view</field>
        <field name="model">purchase.report</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_search" />
        <field name="arch" type="xml">
            <xpath expr='/search/field[@name="product_id"]' position="after">
                <!-- Added a new filter #T7003 -->
                <filter name="seller_id" />
            </xpath>
            <xpath
                expr='/search/group/filter[@name="group_partner_id"]'
                position="after"
            >
                <!-- Added a new filter #T7003 -->
                <filter
                    string="Product Seller"
                    name="product_seller"
                    context="{'group_by':'seller_id'}"
                />
            </xpath>
        </field>
    </record>
</odoo>
