<odoo>
    <!-- inherited view of sale.report with a new field seller added to it #T7003-->
    <record id="product_seller_sale_report_inherited_pivot_view" model="ir.ui.view">
        <field name="name">product.seller.sale.report.inherited.pivot.view</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search" />
        <field name="arch" type="xml">
            <xpath expr='/search/field[@name="team_id"]' position="after">
                <!-- Added a new filter #T7003 -->
                <filter name="seller_id" />
            </xpath>
            <xpath expr='/search/group/filter[@name="User"]' position="after">
                <!-- Added a new filter #T7003 -->
                <filter
                    string="Product Seller"
                    name="product_seller"
                    context="{'group_by':'seller_id'}"
                />
            </xpath>
        </field>
    </record>
</odoo>
