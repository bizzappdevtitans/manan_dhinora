<odoo>
    <!-- inherited view of sale.report with a new field seller added to it #T7003-->
    <record id="sale_report_inherited_pivot_view" model="ir.ui.view">
        <field name="name">sale.report.inherited.pivot.view</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search" />
        <field name="arch" type="xml">
            <xpath expr='/search/field[@name="team_id"]' position="after">
                  <filter name="saller" />
                </xpath>

                <xpath expr='/search/group/filter[@name="User"]' position="after">
                  <filter
                    string="Saller"
                    name="saller"
                    context="{'group_by':'seller'}"
                />
                </xpath>

        </field>
    </record>
</odoo>
