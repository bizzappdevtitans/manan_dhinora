<odoo>
    <!-- inherited view of product.product with a new field product_brand_id #T7127-->
    <record id="product_product_inherited_from_view" model="ir.ui.view">
        <field name="name">product.product.inherited.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
              <xpath expr="//field[@name='barcode']" position="after">
                <!-- Added new field #T7127 -->
                <field name="product_brand_id" />
              </xpath>
        </field>
    </record>
</odoo>
