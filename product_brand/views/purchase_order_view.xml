<odoo>
    <!-- inherited view of purchase with a new field product_brand_id #T7127-->
    <record id="product_brand_purchase_order_inherited_from_view" model="ir.ui.view">
        <field name="name">product.brand.purchase.order.inherited.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
              <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_id']"
                position="after"
            >
                <!-- Added new field #T7127 -->
                <field name="product_brand_id" />
              </xpath>
        </field>
    </record>
</odoo>
