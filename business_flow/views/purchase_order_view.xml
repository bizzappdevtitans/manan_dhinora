<odoo>
    <!-- inherited view of purchase order to add the field used to get the passed value from SO #T00392 -->
    <record id="purchase_addon_form_view" model="ir.ui.view">
        <field name="name">purchase.addon.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                        <field
                    name="sale_purchase_description"
                    string="Sale Description"
                />
                </xpath>
        </field>
    </record>
</odoo>
