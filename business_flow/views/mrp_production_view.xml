<odoo>
    <!-- inherited view of mrp.production to add the custom field 'manufacturing_spec' #T00425-->
    <record id="mrp_production_inherited_form" model="ir.ui.view">
        <field name="name">mrp.production.inherited.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
                <xpath
                expr="/form/sheet/group/group/field[@name='product_id']"
                position="after"
            >
                        <field name="manufacturing_spec" />
                </xpath>
        </field>
    </record>
</odoo>
