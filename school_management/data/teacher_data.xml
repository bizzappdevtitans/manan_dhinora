<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- this is a server action to check if all the fields are filled #T00442 -->
        <record id="test_button" model="ir.actions.server">
            <field name='name'>Validate</field>
            <field name='model_id' ref="model_school_teacher" />
             <field name="binding_model_id" ref="model_school_teacher" />
            <field name="binding_view_types">form</field>
            <field name='state'>code</field>
            <field name='code'>model.action_validate()</field>
        </record>
    </data>
    <data noupdate="1">
        <!-- this is a cron job which will update the number of days it has been since the teacher joined #T00442  -->
        <record id="days_spent_cron" model="ir.cron">
            <field name="name">Time spent here</field>
            <field name="model_id" ref="model_school_teacher" />
            <field name="state">code</field>
            <field name="code">model.cron_day_counter()</field>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>
