<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <!-- form view for the teacher lieave application wizard -->
        <record id="teacher_leave_application_wizard" model="ir.ui.view">
            <field name="name">teacher.leave.form.view</field>
            <field name="model">teacher.leave.application.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <!-- input fields -->
                        <group nolable="1">
                            <field
                            name="date_of_leave_start_wizard"
                            string="Start date"
                        />
                            <field name="date_of_leave_end_wizard" string="End date" />
                            <field name="reason_for_leave_wizard" string="Reason" />
                            <field
                            name="total_leave_days_wizard"
                            string="Total Days Away"
                        />
                            <field name="currency_id_teacher_pay" invisible="1" />
                            <field name="pay_deduction_wizard" string="Pay deduction" />
                        </group>
                    </group>
                    <footer>
                        <button
                        string="Apply for Leave"
                        type="object"
                        name="create_record_teacher_leave"
                        class="btn-primary"
                    />
                        <button
                        string="Discard"
                        special="cancel"
                        class="btn-secondary"
                    />
                    </footer>
                </form>
            </field>
        </record>
        <!-- action decleration for teacher leave wizard -->
        <record id="actions_teacher_leave_wizard" model="ir.actions.act_window">
            <field name="name">Teacher Leave</field>
            <field name="res_model">teacher.leave.application.wizard</field>
            <field name="view_mode">form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="target">new</field>
        </record>
</odoo>
