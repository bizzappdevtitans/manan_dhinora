<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_student">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- using html syntax as qweb essencially does html to pdf -->
                        <h2><span t-field="o.enroll_no" /></h2>
                        <br />
                        <p>Name: <span t-field="o.student_name" /> <span
                                t-field="o.student_surname"
                            /></p>
                        <p>Gender: <span t-field="o.student_gender" />
                        Date of Birth: <span t-field="o.student_date_of_birth" />s
                        Address: <span t-field="o.student_address" /></p>
                        <br />
                        <p>GPA: <span t-field="o.student_gpa" /><br />
                        Subjects: <span t-field="o.subject_ids" /></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_student_fees">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- using html syntax as qweb essencially does html to pdf -->
                        <h1><span t-field="o.enroll_no" /></h1>
                        <br />
                        <p><u>Name</u>: <span t-field="o.student_name" /> <span
                                t-field="o.student_surname"
                            /></p>
                        <p><u>Gender</u>: <span t-field="o.student_gender" />
                        <br /><u>Date of Birth</u>: <span
                                t-field="o.student_date_of_birth"
                            />
                        <br /><u>Address</u>: <span t-field="o.student_address" /></p>
                        <br />
                        <p><u>GPA</u>: <span t-field="o.student_gpa" />
                        <br /><u>Subjects</u>: <span t-field="o.subject_ids" /></p>
                        <style>
                            table, th, td{
                            border: 1px solid black;
                            border-collapse: collapse;
                            text-align: center;
                            }
                        </style>
                        <table style="width:100%">
                            <tr>
                                <th>
                                    <p>Date</p>
                                </th>
                                <th>
                                    <p>Amount</p>
                                </th>
                            </tr>
                            <t t-if="o.fees_table_ids">
                                <t t-foreach="o.fees_table_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <p><t t-esc="line.date_of_deposite" /></p>
                                        </td>
                                        <td>
                                            <p>$<t t-esc="line.total_amount" /></p>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </table>
                    </div>
                </t>
            </t>
        </t>
     </template>
</odoo>
